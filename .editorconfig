# EditorConfig is awesome: http://EditorConfig.org

root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
charset = utf-8

# 2 space indentation
[*.{css,js,json,jsx,html,yml,yaml,less,babelrc}]
indent_size = 2

# 4 space indentation
[*.java]
indent_size = 4
